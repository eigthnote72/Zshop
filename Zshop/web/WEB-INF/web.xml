<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>getProducts</servlet-name>
        <servlet-class>Controller.home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productManagement</servlet-name>
        <servlet-class>Controller.productManagement</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>Controller.insertProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateProduct</servlet-name>
        <servlet-class>Controller.updateProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteProduct</servlet-name>
        <servlet-class>Controller.deleteProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>brand</servlet-name>
        <servlet-class>Controller.brand</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Controller.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>insertAccount</servlet-name>
        <servlet-class>Controller.insertAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>shoppingCartControl</servlet-name>
        <servlet-class>Controller.shoppingCartControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>shoppingCart</servlet-name>
        <servlet-class>Controller.shoppingCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getProducts</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productManagement</servlet-name>
        <url-pattern>/productManagement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/addProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateProduct</servlet-name>
        <url-pattern>/updateProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteProduct</servlet-name>
        <url-pattern>/deleteProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>brand</servlet-name>
        <url-pattern>/home/brand</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>insertAccount</servlet-name>
        <url-pattern>/registerAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shoppingCartControl</servlet-name>
        <url-pattern>/shoppingCartControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shoppingCart</servlet-name>
        <url-pattern>/shoppingCart</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
